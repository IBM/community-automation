<?xml version='1.0' encoding='UTF-8'?>
<agent-input>
  <variables>
   <variable name='sharedLocation' value='{{ install_ihs_base_win }}{{ install_ihs_base }}/{{ shared_dir }}'/>
  </variables>
  <server>
	  <repository location='https://rtpgsa.ibm.com/gsa/rtpgsa/projects/w/was.build/botp/{{ twas_release }}.IM/{{ ihs_daily_or_test }}/{{ ihs_im_driver }}.linux/linux/zipper/repository/'/>
  </server>
  <profile id='{{ profile_id_ibm_http_server }}' installLocation='{{ install_ihs_base_win }}{{ install_ihs_base }}/{{ http_dir }}'>
    <data key='cic.selector.arch' value='{{ cic_selector_arch[ansible_architecture] }}'/>
    <data key='cic.selector.os' value='{{ cic_selector_os[ansible_system] }}'/>	  
    <data key='user.ihs.allowNonRootSilentInstall' value='true'/>
    <data key='user.ihs.httpPort' value='{{ ihs_http_port }}'/>
    <data key='user.ihs.http.server.service.name.key' value='IBMHTTPServer'/>
    <data key='user.ihs.win.serverServicePassword' value='XjTveChg5ba6olBVMK/Reg=='/>
    <data key='user.ihs.http.server.service.name' value='{{ profile_id_ibm_http_server }}'/>
    <data key='user.ihs.win.serverServiceLogOnAsLocalSystem' value='true'/>
    <data key='user.ihs.win.serverServiceUser' value='root'/>
  </profile>
  <install>
    <!-- {{ profile_id_ibm_http_server }} for WebSphere Application Server 9.0.5.10 -->
    <offering profile='{{ profile_id_ibm_http_server }}' id='{{ im_http_package[twas_release] }}'  features='core.feature'/>
    <!-- IBM SDK, Java Technology Edition, Version 8 8.0.7.0 -->
    <offering profile='{{ profile_id_ibm_http_server }}' id='{{ im_http_java_package }}' features='com.ibm.sdk.8'/>
  </install>
  <profile id='{{ profile_id_ibm_http_plugin }}' installLocation='{{ install_ihs_base_win }}{{ install_ihs_base }}/{{ plugin_dir }}'>
    <data key='cic.selector.arch' value='{{ cic_selector_arch[ansible_architecture] }}'/>
    <data key='cic.selector.os' value='{{ cic_selector_os[ansible_system] }}'/>
  </profile>
  <install>
    <!-- {{ profile_id_ibm_http_plugin }} 9.0.5.10 -->
    <offering profile='{{ profile_id_ibm_http_plugin }}' id='{{ im_plugin_package[twas_release] }}' features='core.feature'/>
    <!-- IBM SDK, Java Technology Edition, Version 8 8.0.7.0 -->
    <offering profile='{{ profile_id_ibm_http_plugin }}' id='{{ im_plugin_java_package }}' features='com.ibm.sdk.8'/>
  </install>
  <profile id='{{ profile_id_ibm_wct_toolbox }}' installLocation='{{ install_ihs_base_win }}{{ install_ihs_base }}/{{ wct_dir }}'>
    <data key='cic.selector.arch' value='{{ cic_selector_arch[ansible_architecture] }}'/>
    <data key='cic.selector.os' value='{{ cic_selector_os[ansible_system] }}'/>
  </profile>
  <install>
    <!-- {{ profile_id_ibm_wct_toolbox }} 9.0.5.10 -->
    <offering profile='{{ profile_id_ibm_wct_toolbox }}' id='{{ im_wct_package[twas_release] }}' features='core.feature,pct'/>
    <!-- IBM SDK, Java Technology Edition, Version 8 8.0.7.0 -->
    <offering profile='{{ profile_id_ibm_wct_toolbox }}' id='{{ im_wct_java_package }}' features='com.ibm.sdk.8'/>
  </install>
  <preference name='com.ibm.cic.common.core.preferences.eclipseCache' value='${sharedLocation}'/>
</agent-input>
